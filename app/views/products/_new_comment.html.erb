<% if signed_in? %>
    <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div class="form-group">
   <p>
    <%= f.label :body, "Comments" %><br>
    <%= f.text_area :body, rows: 5, class: "form-control", placeholder: "Enter your comment", require: true %>
   </P>
  </div>
  <div class="field">
    <div id="star-rating"></div>
    </div>
  <div class="action">
    <p>
     <%= f.submit "Submit", class: "btn btn-primary", disabled: true %>
   </p>
  </div>
   <% end %>
<% end %>
