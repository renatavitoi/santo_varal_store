<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div class="row">
    <div class="col-12">
      <div class="form-group">
      <%= form.label :body, "Comments" %><br>
      <%= form.text_area :body, class: "form-control", placeholder: "Enter your comment", require: true %>
    </p>
    <p>
      <div class="field">
        <div id="star-rating">
      <%= form.label :rating %><br>
      <%= form.text_field :rating, class: "rating" %>
    </div>
    </p>
    <p>
      <div clas="action">
      <%= form.submit "Submit", class: "form_label" %>
    </div>
    </p>
  <% end %>
<% end %>
