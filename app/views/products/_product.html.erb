<div class="col-sm-6 col-md-4">
  <%  if product.image_url %>
    <% end %>
    <% cache product do %>
  <%= image_tag(product.image_url, class: "img-fluid") %>
  <h1><%= link_to product.name, product %></h1>
  <p><%= product.description %></p>
  <p><%= product.colour %></p>
  <strong> $ <%= product.price %></strong>
  <td><%= link_to 'Payments', product_path(product) %></td>
  <td><%= link_to 'Show', product_path(product) %></td>
  <td><%= link_to 'Edit', edit_product_path(product) %></td>
  <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</div><!-- /col -->
